<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://maven.apache.org/POM/4.0.0
            http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.schoellerfamily.gedbrowser</groupId>
  <artifactId>gedbrowser-top</artifactId>
  <version>1.1.0-SNAPSHOT</version>
  <packaging>pom</packaging>

  <organization>
     <name>Schoeller Family Software</name>
     <url>http://www.schoellerfamily.org</url>
  </organization>

  <developers>
    <developer>
      <name>Dick Schoeller</name>
      <email>schoeller@comcast.net</email>
      <roles>
        <role>Chief Cook</role>
        <role>Bottle Washer</role>
      </roles>
    </developer>
    <developer>
      <name>Jonathan Schoeller</name>
      <email>vitamort@gmail.com</email>
      <roles>
        <role>Minion</role>
      </roles>
    </developer>
  </developers>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

    <spring-boot.version>1.4.3.RELEASE</spring-boot.version>
    <thymeleaf.version>3.0.2.RELEASE</thymeleaf.version>
    <spring.version>4.2.9.RELEASE</spring.version>
    <junit.version>4.12</junit.version>
    <selenium.version>2.48.2</selenium.version>
    <selenium-client-driver.version>1.0.2</selenium-client-driver.version>
    <cglib.version>3.1</cglib.version>
    <spring-data-mongodb.version>1.9.6.RELEASE</spring-data-mongodb.version>
    <spring-data-commons.version>1.12.6.RELEASE</spring-data-commons.version>
    <config-dir>${project.basedir}/config</config-dir>
  </properties>

  <name>gedbrowser POM</name>
  <description>Gedrowser Top Level</description>

  <modules>
    <module>gedbrowser-datamodel</module>
    <module>gedbrowser-analytics</module>
    <module>gedbrowser-geographics</module>
    <module>gedbrowser-reader</module>
    <module>gedbrowser-renderer</module>
    <module>gedbrowser-dao</module>
    <module>gedbrowser-mongo-dao</module>
    <module>gedbrowser</module>
    <module>gedbrowser-selenium</module>
    <module>gedbrowser-geoservice</module>
    <module>gedbrowser-geocode-cache</module>
    <module>gedbrowser-geocode-dao</module>
    <module>gedbrowser-geocode-mongo-dao</module>
  </modules>

  <reporting>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>findbugs-maven-plugin</artifactId>
        <version>3.0.3</version>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-checkstyle-plugin</artifactId>
        <version>2.17</version>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-pmd-plugin</artifactId>
        <version>3.6</version>
        <configuration>
          <linkXRef>true</linkXRef>
          <sourceEncoding>utf-8</sourceEncoding>
          <targetJdk>1.8</targetJdk>
          <rulesets>
            <ruleset>${config-dir}/rulesets/java/basic.xml</ruleset>
            <ruleset>${config-dir}/rulesets/java/unusedcode.xml</ruleset>
            <ruleset>${config-dir}/rulesets/java/imports.xml</ruleset>
            <ruleset>${config-dir}/rulesets/java/coupling.xml</ruleset>
            <ruleset>${config-dir}/rulesets/java/unusedcode.xml</ruleset>
            <ruleset>${config-dir}/rulesets/java/design.xml</ruleset>
            <ruleset>${config-dir}/rulesets/java/codesize.xml</ruleset>
            <ruleset>${config-dir}/rulesets/java/comments.xml</ruleset>
            <ruleset>${config-dir}/rulesets/java/junit.xml</ruleset>
            <ruleset>${config-dir}/rulesets/java/optimizations.xml</ruleset>
            <ruleset>${config-dir}/rulesets/java/sunsecure.xml</ruleset>
          </rulesets>
        </configuration>
      </plugin>
    </plugins>
  </reporting>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-compiler-plugin</artifactId>
          <version>3.5.1</version>
          <configuration>
            <source>1.8</source>
            <target>1.8</target>
          </configuration>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-failsafe-plugin</artifactId>
          <version>2.19.1</version>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-surefire-plugin</artifactId>
          <version>2.19.1</version>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-pmd-plugin</artifactId>
          <version>3.6</version>
          <configuration>
            <linkXRef>true</linkXRef>
            <sourceEncoding>utf-8</sourceEncoding>
            <targetJdk>1.8</targetJdk>
            <rulesets>
              <ruleset>${config-dir}/rulesets/java/basic.xml</ruleset>
              <ruleset>${config-dir}/rulesets/java/unusedcode.xml</ruleset>
              <ruleset>${config-dir}/rulesets/java/imports.xml</ruleset>
              <ruleset>${config-dir}/rulesets/java/coupling.xml</ruleset>
              <ruleset>${config-dir}/rulesets/java/unusedcode.xml</ruleset>
              <ruleset>${config-dir}/rulesets/java/design.xml</ruleset>
              <ruleset>${config-dir}/rulesets/java/codesize.xml</ruleset>
              <ruleset>${config-dir}/rulesets/java/comments.xml</ruleset>
              <ruleset>${config-dir}/rulesets/java/junit.xml</ruleset>
              <ruleset>${config-dir}/rulesets/java/optimizations.xml</ruleset>
              <ruleset>${config-dir}/rulesets/java/sunsecure.xml</ruleset>
            </rulesets>
          </configuration>
          <executions>
            <execution>
              <id>pmd</id>
              <phase>test</phase>
              <goals>
                <goal>pmd</goal>
                <goal>cpd</goal>
              </goals>
            </execution>
          </executions>
        </plugin>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>findbugs-maven-plugin</artifactId>
          <version>3.0.4</version>
          <executions>
            <execution>
              <id>findbugs</id>
              <phase>test</phase>
              <goals>
                <goal>findbugs</goal>
              </goals>
            </execution>
          </executions>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-checkstyle-plugin</artifactId>
          <version>2.17</version>
          <executions>
            <execution>
              <id>checkstyle</id>
              <phase>test</phase>
              <goals>
                <goal>checkstyle</goal>
              </goals>
            </execution>
          </executions>
        </plugin>
        <plugin>
          <groupId>org.jacoco</groupId>
          <artifactId>jacoco-maven-plugin</artifactId>
          <version>0.7.7.201606060606</version>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-war-plugin</artifactId>
          <version>3.0.0</version>
        </plugin>
         <plugin>
          <groupId>org.springframework.boot</groupId>
          <artifactId>spring-boot-maven-plugin</artifactId>
          <version>1.4.1.RELEASE</version>
        </plugin>
        <plugin>
          <groupId>com.spotify</groupId>
          <artifactId>docker-maven-plugin</artifactId>
          <version>0.4.13</version>
          <executions>
            <!-- execution>
              <id>build-image</id>
              <phase>package</phase>
              <goals>
                <goal>build</goal>
              </goals>
            </execution -->
            <!-- execution>
              <id>tag-image</id>
              <phase>package</phase>
              <goals>
                <goal>tag</goal>
              </goals>
            </execution -->
            <!-- execution>
              <id>push-image</id>
              <phase>deploy</phase>
              <goals>
                <goal>push</goal>
              </goals>
            </execution -->
          </executions>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-source-plugin</artifactId>
          <version>3.0.1</version>
          <executions>
            <execution>
              <id>attach-sources</id>
              <phase>package</phase>
              <goals>
                <goal>jar</goal>
              </goals>
            </execution>
          </executions>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-javadoc-plugin</artifactId>
          <version>2.10.4</version>
          <executions>
            <execution>
              <id>attach-javadoc</id>
              <phase>package</phase>
              <goals>
                <goal>jar</goal>
              </goals>
            </execution>
          </executions>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <groupId>com.spotify</groupId>
        <artifactId>docker-maven-plugin</artifactId>
        <configuration>
          <skipDockerBuild>true</skipDockerBuild>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <distributionManagement>
    <repository>
      <id>schoellerfamily-releases</id>
      <name>Internal Releases</name>
      <url>http://minitokyo.schoellerfamily.org:8081/nexus/content/repositories/releases</url>
    </repository>
    <snapshotRepository>
      <id>schoellerfamily-snapshots</id>
      <url>http://minitokyo.schoellerfamily.org:8081/nexus/content/repositories/snapshots</url>
    </snapshotRepository>
  </distributionManagement>

  <repositories>
    <repository>
      <id>schoellerfamily</id>
      <name>Local Nexus</name>
      <url>http://minitokyo.schoellerfamily.org:8081/</url>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>
</project>
